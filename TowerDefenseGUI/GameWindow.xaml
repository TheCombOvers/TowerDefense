<Window x:Class="TowerDefenseGUI.GameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TowerDefenseGUI"
        mc:Ignorable="d"
        Title="Window1" Height="900" Width="1400" Cursor="None">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="993*"/>
            <ColumnDefinition Width="401*"/>
        </Grid.ColumnDefinitions>
        <Rectangle Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="870" Margin="966,0,0,0" Stroke="Black" VerticalAlignment="Top" Width="428" Grid.ColumnSpan="2"/>
        <Image x:Name="TurretImage" HorizontalAlignment="Left" Source="Resources\turret tower.PNG" Height="126" Margin="32,113,0,0" VerticalAlignment="Top" Width="127" RenderOptions.BitmapScalingMode="NearestNeighbor" Grid.Column="1"/>
        <TextBlock x:Name="txtTurretName" HorizontalAlignment="Left" Height="27" Margin="190,124,0,0" TextWrapping="Wrap" Text="Turret Tower" FontSize="20" VerticalAlignment="Top" Width="114" Grid.Column="1"/>
        <TextBlock x:Name="txtTurretType" HorizontalAlignment="Left" Height="16" Margin="190,156,0,0" TextWrapping="Wrap" Text="Target: Ground" VerticalAlignment="Top" Width="90" Grid.Column="1"/>
        <TextBlock x:Name="txtTurretDmg" HorizontalAlignment="Left" Height="16" Margin="190,172,0,0" TextWrapping="Wrap" Text="Damage: 4/s" VerticalAlignment="Top" Width="90" Grid.Column="1"/>
        <TextBlock x:Name="txtTurretRange" HorizontalAlignment="Left" Height="16" Margin="190,188,0,0" TextWrapping="Wrap" Text="Range: 150" VerticalAlignment="Top" Width="90" Grid.Column="1"/>
        <TextBlock x:Name="txtTurretCost" HorizontalAlignment="Left" Height="16" Margin="190,204,0,0" TextWrapping="Wrap" Text="Cost: $25" VerticalAlignment="Top" Width="90" Grid.Column="1"/>
        <Button Content="Basic" FontSize="30" HorizontalAlignment="Left" Height="66" Margin="982,0,0,0" VerticalAlignment="Top" Width="190" IsEnabled="False" Grid.ColumnSpan="2"/>
        <Button Content="Advanced" FontSize="30" HorizontalAlignment="Left" Height="66" Margin="201,0,0,0" VerticalAlignment="Top" Width="190" IsEnabled="False" Grid.Column="1"/>
        <Image x:Name="MortarImage" HorizontalAlignment="Left" Source="Resources\mortar tower.PNG" Height="126" Margin="32,471,0,0" VerticalAlignment="Top" Width="127" RenderOptions.BitmapScalingMode="NearestNeighbor" Grid.Column="1"/>
        <Button x:Name="btnTurretBuy" Content="Buy" FontSize="20" HorizontalAlignment="Left" Height="39" Margin="305,172,0,0" VerticalAlignment="Top" Width="54" Click="btnTurretBuy_Click" Grid.Column="1"/>
        <TextBlock x:Name="txtMortarName" HorizontalAlignment="Left" Height="27" Margin="190,488,0,0" TextWrapping="Wrap" Text="Mortar Tower" FontSize="20" VerticalAlignment="Top" Width="127" Grid.Column="1"/>
        <TextBlock x:Name="txtMortarType" HorizontalAlignment="Left" Height="16" Margin="190,520,0,0" TextWrapping="Wrap" Text="Target: Ground" VerticalAlignment="Top" Width="90" Grid.Column="1"/>
        <TextBlock x:Name="txtMortarDmg" HorizontalAlignment="Left" Height="16" Margin="190,536,0,0" TextWrapping="Wrap" Text="Damage: 50/5s" VerticalAlignment="Top" Width="90" Grid.Column="1"/>
        <TextBlock x:Name="txtMortarRange" HorizontalAlignment="Left" Height="16" Margin="190,552,0,0" TextWrapping="Wrap" Text="Range: 500" VerticalAlignment="Top" Width="90" Grid.Column="1"/>
        <TextBlock x:Name="txtMortarCost" HorizontalAlignment="Left" Height="16" Margin="190,568,0,0" TextWrapping="Wrap" Text="Cost: $200" VerticalAlignment="Top" Width="90" Grid.Column="1"/>
        <Button x:Name="btnMortarBuy" Content="Buy" FontSize="20" HorizontalAlignment="Left" Height="39" Margin="305,536,0,0" VerticalAlignment="Top" Width="54" IsEnabled="False" Grid.Column="1"/>
        <Image x:Name="FlakImage" HorizontalAlignment="Left" Source="Resources\flak tower.PNG" Height="126" Margin="32,289,0,0" VerticalAlignment="Top" Width="127" RenderOptions.BitmapScalingMode="NearestNeighbor" Grid.Column="1"/>
        <TextBlock x:Name="txtFlakName" HorizontalAlignment="Left" Height="27" Margin="190,306,0,0" TextWrapping="Wrap" Text="Flak Tower" FontSize="20" VerticalAlignment="Top" Width="102" Grid.Column="1"/>
        <TextBlock x:Name="txtFlakType" HorizontalAlignment="Left" Height="16" Margin="190,338,0,0" TextWrapping="Wrap" Text="Target: Air" VerticalAlignment="Top" Width="58" Grid.Column="1"/>
        <TextBlock x:Name="txtFlakDmg" HorizontalAlignment="Left" Height="16" Margin="190,354,0,0" TextWrapping="Wrap" Text="Damage: 2/s" VerticalAlignment="Top" Width="72" Grid.Column="1"/>
        <TextBlock x:Name="txtFlakRange" HorizontalAlignment="Left" Height="16" Margin="190,370,0,0" TextWrapping="Wrap" Text="Range: 250" VerticalAlignment="Top" Width="90" Grid.Column="1"/>
        <TextBlock x:Name="txtFlakCost" HorizontalAlignment="Left" Height="16" Margin="190,386,0,0" TextWrapping="Wrap" Text="Cost: $75" VerticalAlignment="Top" Width="90" Grid.Column="1"/>
        <Button x:Name="btnFlakBuy" Content="Buy" FontSize="20" HorizontalAlignment="Left" Height="39" Margin="305,352,0,0" VerticalAlignment="Top" Width="54" IsEnabled="False" Grid.Column="1"/>
        <Rectangle Fill="#FFF4F4F5" Height="3" Margin="966,680,0,0" Stroke="Black" VerticalAlignment="Top" HorizontalAlignment="Left" Width="428" Grid.ColumnSpan="2"/>
        <Button x:Name="btnNextWave" Content="Next Wave" FontSize="20" HorizontalAlignment="Left" Height="68" Margin="982,694,0,0" VerticalAlignment="Top" Width="105" IsEnabled="True" Click="btnNextWave_Click" Grid.ColumnSpan="2"/>
        <Image x:Name="MapImage" Source="Resources\path1.png" HorizontalAlignment="Left" Height="870" VerticalAlignment="Top" Width="966"/>
        <TextBlock x:Name="txtLives" HorizontalAlignment="Left" Height="41" Margin="230,819,0,0" TextWrapping="Wrap" Text="Lives: 10" FontSize="25" VerticalAlignment="Top" Width="99" Grid.Column="1"/>
        <Rectangle Fill="#FFF4F4F5" Height="187" Margin="221,683,0,0" Stroke="Black" VerticalAlignment="Top" HorizontalAlignment="Left" Width="4" Grid.Column="1"/>
        <TextBlock x:Name="txtMoney" HorizontalAlignment="Left" Height="35" Margin="230,760,0,0" TextWrapping="Wrap" Text="$100" FontSize="25" VerticalAlignment="Top" Width="161" Grid.Column="1"/>
        <Rectangle Fill="#FFF4F4F5" Height="3" Margin="224,739,0,0" Stroke="Black" VerticalAlignment="Top" HorizontalAlignment="Left" Width="177" Grid.Column="1"/>
        <Rectangle Fill="#FFF4F4F5" Height="3" Margin="224,811,0,0" Stroke="Black" VerticalAlignment="Top" HorizontalAlignment="Left" Width="177" Grid.Column="1"/>
        <TextBlock x:Name="txtMoney_Copy" HorizontalAlignment="Left" Height="35" Margin="230,693,0,0" TextWrapping="Wrap" Text="Points: 0" FontSize="25" VerticalAlignment="Top" Width="161" Grid.Column="1"/>
    </Grid>
</Window>
