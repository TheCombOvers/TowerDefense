        <Border CornerRadius="50" BorderBrush="Gray" BorderThickness="20"/>
        <Border BorderBrush="Gray" BorderThickness="20"/>
        <Label Margin="49,150,10,431" MinHeight="350" FontSize="200">Tower Defense</Label>
        <Label Margin="90,380,90,291">
            <!-- <Image Source=""/> -->
        </Label>
        <Button Margin="550,630,550,144" Click="PlayButton_Click" x:Name="PlayButton" Content="Play" FontSize="50" Background="#77917e"/>
        <Button Margin="550,730,720,90" Click="HighScoreButton_Click" x:Name="HighScoreButton" Content="High Scores" FontSize="26" Background="#77917e"/>
        <Button Margin="720,730,550,90" Click="HelpButton_Click" x:Name="HelpButton" Content="Help" FontSize="26" Background="#77917e"/>
    </Grid>
</Window>